<%= form_for @profile, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :app_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :app_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hostname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hostname, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pid, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pid, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payload, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :payload, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profiles_path, :class => 'btn' %>
  </div>
<% end %>
